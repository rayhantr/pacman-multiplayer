{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "outDir": "./public/js",
    "rootDir": "./src/client",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "include": [
    "src/client/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/server"
  ]
}

